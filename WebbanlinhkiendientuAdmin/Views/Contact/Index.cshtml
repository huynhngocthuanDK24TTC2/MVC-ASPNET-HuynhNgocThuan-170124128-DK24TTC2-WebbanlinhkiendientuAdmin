@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- CSS TÙY CHỈNH CHO TRANG LIÊN HỆ -->
<style>
    
    .btn-contact-submit {
        background-color: #d31e1e;
        color: #fff;
        border: 1px solid #d31e1e;
        padding: 10px 20px;
        font-weight: bold;
        text-transform: uppercase;
        transition: 0.3s;
        margin-top: 10px;
    }

        .btn-contact-submit:hover {
            background-color: #333;
            color: #fff;
            border-color: #333;
        }

    /* Style cho các ô nhập liệu */
    .aa-contact-form .form-control {
        border-radius: 0;
        height: 45px;
    }

    .aa-contact-form textarea.form-control {
        height: auto;
    }
</style>

<!-- 1. BANNER TIÊU ĐỀ -->
<section id="aa-catg-head-banner">
    <!-- Sử dụng ảnh Banner  -->
    <img src="@Url.Content("~/Images/banner/banner2.jpg")" alt="banner liên hệ" style="width: 100%; height: 300px; object-fit: cover;">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Liên Hệ Với Chúng Tôi</h2>
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="active">Liên hệ</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- 2. NỘI DUNG LIÊN HỆ -->
<section id="aa-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-contact-area">
                    <div class="aa-contact-top">
                        <h2>Chúng tôi luôn lắng nghe bạn</h2>
                        <p>Nếu bạn có thắc mắc về sản phẩm, bảo hành hoặc cần tư vấn kỹ thuật, vui lòng để lại thông tin. Đội ngũ kỹ thuật ShopHNT sẽ phản hồi trong vòng 24h.</p>
                    </div>

                    <!-- BẢN ĐỒ (Google Map Embed) -->
                    <div class="aa-contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3928.841518408643!2d106.3421133147424!3d10.02993369283063!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a0175ea32194a3%3A0x8922718804e760d3!2zxJDhuqFpIGjhu41jIFRyw6AgVmluaA!5e0!3m2!1svi!2s!4v1672888636541!5m2!1svi!2s"
                                width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>

                    <!-- FORM & THÔNG TIN -->
                    <div class="aa-contact-bottom">
                        <div class="row">

                            <!-- CỘT TRÁI: FORM GỬI TIN -->
                            <div class="col-md-8">
                                <div class="aa-contact-form">
                                    <h3>Gửi thắc mắc / Góp ý</h3>

                                    <!-- Form trỏ về ContactController -->
                                    @using (Html.BeginForm("SendMessage", "Contact", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input type="text" name="Name" class="form-control" placeholder="Họ và tên *" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <input type="email" name="Email" class="form-control" placeholder="Email liên hệ *" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <input type="text" name="Subject" class="form-control" placeholder="Chủ đề (Ví dụ: Hỏi giá RAM, Bảo hành...)" required>
                                        </div>

                                        <div class="form-group">
                                            <textarea class="form-control" name="Message" rows="5" placeholder="Nội dung chi tiết *" required></textarea>
                                        </div>

                                        <button class="btn-contact-submit" type="submit">Gửi tin nhắn</button>
                                    }

                                    
                                    @if (TempData["Success"] != null)
                                    {
                                        <div class="alert alert-success" style="margin-top: 20px;">
                                            <i class="fa fa-check-circle"></i> @TempData["Success"]
                                        </div>
                                    }
                                    @if (TempData["Error"] != null)
                                    {
                                        <div class="alert alert-danger" style="margin-top: 20px;">
                                            <i class="fa fa-exclamation-triangle"></i> @TempData["Error"]
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- CỘT PHẢI: THÔNG TIN LIÊN HỆ -->
                            <div class="col-md-4">
                                <div class="aa-contact-address">
                                    <h3>Thông tin ShopHNT</h3>
                                    <p>Chuyên cung cấp linh kiện máy tính, Laptop chính hãng giá tốt nhất thị trường.</p>
                                    <address>
                                        <p><span class="fa fa-map-marker"></span> <strong>Địa chỉ:</strong> Trường Đại học Trà Vinh, TP. Trà Vinh</p>
                                        <p><span class="fa fa-phone"></span> <strong>Hotline:</strong> <span style="color:#d31e1e; font-weight:bold;">0909.605.779</span></p>
                                        <p><span class="fa fa-envelope"></span> <strong>Email:</strong> support@shophnt.com</p>
                                        <p><span class="fa fa-clock-o"></span> <strong>Giờ làm việc:</strong> 8:00 - 17:30 (Thứ 2 - Thứ 7)</p>
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>