@using PagedList.Mvc
@model PagedList.IPagedList<WebbanlinhkiendientuAdmin.Models.Product>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .pagination {
        margin: 0;
    }

        .pagination > .active > a {
            background-color: #5bc0de;
            border-color: #5bc0de;
        }
</style>

<!-- TIÊU ĐỀ -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header" style="color: #5bc0de; border-bottom: 2px solid #ddd; margin-top: 20px;">
            <i class="fa fa-cubes"></i> Quản Lý Sản Phẩm
        </h3>
    </div>
</div>

<!-- THÔNG BÁO -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="height: 55px;">
                <div class="row">
                    <!-- Nút Thêm -->
                    <div class="col-md-4">
                        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Thêm sản phẩm
                        </a>
                    </div>
                    <!-- Tìm kiếm -->
                    <div class="col-md-8 text-right">
                        @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "form-inline" }))
                        {
                            <div class="form-group">
                                <input type="text" name="searchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Tên sản phẩm, danh mục..." />
                            </div>
                            <button type="submit" class="btn btn-info"><i class="fa fa-search"></i> Tìm</button>
                        }
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr class="info">
                                <th class="text-center" style="width: 60px;">Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th class="text-right">Giá bán</th>
                                <th class="text-center">Tồn kho</th>
                               
                                <th class="text-center" style="width: 120px;">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <img src="@Url.Content(string.IsNullOrEmpty(item.PicturePath) ? "~/Images/no-image.jpg" : item.PicturePath)"
                                                 style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #ddd;" />
                                        </td>
                                        <td>
                                            <strong>@item.Name</strong>
                                            <br />
                                            <small class="text-muted">ID: #@item.ProductID</small>
                                        </td>
                                        <td>
                                            @(item.SubCategory != null ? item.SubCategory.Name : (item.Category != null ? item.Category.Name : "---"))
                                        </td>
                                        <td class="text-right" style="color: #d31e1e; font-weight: bold;">
                                            @string.Format("{0:N0} đ", item.UnitPrice)
                                        </td>
                                        <td class="text-center">
                                            @if (item.UnitInStock > 0)
                                            {
                                                <span class="label label-success">@item.UnitInStock</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">Hết hàng</span>
                                            }
                                        </td>
                                       
                                        <td class="text-center">
                                            <a href="@Url.Action("Edit", "Product", new { id = item.ProductID })" class="btn btn-warning btn-xs" title="Sửa"><i class="fa fa-pencil"></i></a>
                                            <a href="@Url.Action("Details", "Product", new { id = item.ProductID })" class="btn btn-info btn-xs" title="Xem"><i class="fa fa-eye"></i></a>
                                            <a href="@Url.Action("Delete", "Product", new { id = item.ProductID })" class="btn btn-danger btn-xs" title="Xóa"><i class="fa fa-trash-o"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted" style="padding: 20px;">Chưa có dữ liệu sản phẩm.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- PHÂN TRANG -->
                <div class="row">
                    <div class="col-md-6" style="margin-top: 20px;">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    </div>
                    <div class="col-md-6 text-right">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>