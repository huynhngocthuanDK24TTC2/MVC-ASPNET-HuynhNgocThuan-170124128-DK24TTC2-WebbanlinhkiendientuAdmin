@model IEnumerable<WebbanlinhkiendientuAdmin.Models.Order>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header" style="color: #5bc0de; border-bottom: 2px solid #ddd; margin-top: 20px;">
            <i class="fa fa-shopping-cart"></i> Quản Lý Đơn Đặt Hàng
        </h3>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list-alt"></i> Danh sách đơn hàng</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr class="info">
                                <th class="text-center">Mã ĐH</th>
                                <th>Khách hàng</th>
                                <th>Ngày đặt</th>
                                <th>Thanh toán</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-right">Tổng tiền</th>
                                <th class="text-center">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">#@item.OrderID</td>
                                        <td>
                                            @if (item.Customer != null)
                                            {
                                                <strong>@item.Customer.First_Name @item.Customer.Last_Name</strong>
                                                <br /><small class="text-muted">@item.Customer.Phone</small>
                                            }
                                            else
                                            { <i>Khách vãng lai</i>}
                                        </td>
                                        <td>@(item.OrderDate.HasValue ? item.OrderDate.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                                        <td>
                                            @(item.Payment?.PaymentType?.TypeName ?? "COD")
                                        </td>

                                        <td class="text-center">
                                            @if (item.isCompleted == true || item.Deliver == true)
                                            {
                                                <span class="label label-success">Hoàn thành</span>
                                            }
                                            else if (item.Shipped == true)
                                            {
                                                <span class="label label-primary">Đang vận chuyển</span>
                                            }
                                            else if (item.Dispatched == true)
                                            {
                                                <span class="label label-warning">Đang xử lý</span>
                                            }
                                            
                                            else if (item.CancelOrder == true)
                                            {
                                                <span class="label label-default" style="text-decoration: line-through;">Đã hủy</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">Chờ xác nhận</span>
                                            }
                                        </td>

                                        <td class="text-right text-danger font-bold">@string.Format("{0:N0} đ", item.TotalAmount)</td>
                                        <td class="text-center">
                                            <a href="@Url.Action("Details", "Order", new { id = item.OrderID })" class="btn btn-info btn-xs"><i class="fa fa-eye"></i> Xem</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>