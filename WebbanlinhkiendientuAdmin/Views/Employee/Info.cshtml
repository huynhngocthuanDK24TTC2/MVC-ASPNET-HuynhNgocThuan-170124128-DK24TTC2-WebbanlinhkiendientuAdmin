@model WebbanlinhkiendientuAdmin.Models.admin_Employee

@{
    ViewBag.Title = "Chi tiết nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">

        <!-- Nút quay lại (Thống nhất giao diện) -->
        <div class="row mb-4">
            <div class="col-12">
                <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>

        <div class="row align-items-center flex-row-reverse">
            <!-- Cột thông tin -->
            <div class="col-lg-8">
                <div class="about-text go-to">
                    <h2 class="text-info text-uppercase">Thông tin chi tiết</h2>
                    <hr />

                    <!-- Tên nhân viên -->
                    <h3 class="text-primary display-6">@Model.FirstName @Model.LastName</h3>

                    <div class="row about-list mt-4">
                        <!-- Ngày sinh -->
                        <div class="col-md-6 mb-3">
                            <div class="media">
                                <label class="fw-bold text-secondary">Ngày sinh</label>
                                <p class="fw-bold text-dark">
                                    @(Model.DateofBirth.HasValue ? Model.DateofBirth.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                                </p>
                            </div>
                        </div>

                        <!-- Giới tính -->
                        <div class="col-md-6 mb-3">
                            <div class="media">
                                <label class="fw-bold text-secondary">Giới tính</label>
                                <p class="fw-bold text-dark">
                                    @if (Model.Gender == "Male")
                                    {<span>Nam</span> }
                                    else if (Model.Gender == "Female")
                                    { <span>Nữ</span> }
                                    else
                                    { <span>@Model.Gender</span>}
                                </p>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <div class="media">
                                <label class="fw-bold text-secondary">Email</label>
                                <p>@Model.Email</p>
                            </div>
                        </div>

                        <!-- Điện thoại -->
                        <div class="col-md-6 mb-3">
                            <div class="media">
                                <label class="fw-bold text-secondary">Số điện thoại</label>
                                <p>@Model.Phone</p>
                            </div>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="col-12 mb-3">
                            <div class="media">
                                <label class="fw-bold text-secondary">Địa chỉ</label>
                                <p>@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột Ảnh đại diện -->
            <div class="col-lg-4 text-center mb-4 mb-lg-0">
                <div class="about-avatar">
                    <!-- Xử lý ảnh: Nếu null thì hiện ảnh mặc định -->
                    <img src="@Url.Content(string.IsNullOrEmpty(Model.PicturePath) ? "~/Images/no-image.jpg" : Model.PicturePath)"
                         title="@Model.FirstName"
                         alt="Avatar"
                         class="img-thumbnail rounded-circle shadow"
                         style="width: 250px; height: 250px; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</section>