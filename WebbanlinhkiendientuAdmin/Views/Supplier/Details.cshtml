@model WebbanlinhkiendientuAdmin.Models.Supplier

@{
    ViewBag.Title = "Chi tiết nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- TIÊU ĐỀ TRANG -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header" style="color: #5bc0de; border-bottom: 2px solid #ddd; margin-top: 20px;">
            <i class="fa fa-truck"></i> Hồ Sơ Nhà Cung Cấp
        </h3>
    </div>
</div>

<div class="row">
    <!-- CỘT TRÁI: THÔNG TIN CHI TIẾT -->
    <div class="col-md-8">
        <div class="panel panel-info" style="box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-info-circle"></i> Thông tin doanh nghiệp</h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">

                    <!-- Tên công ty -->
                    <div class="form-group" style="margin-bottom: 5px;">
                        <label class="control-label col-md-3" style="text-align: left; color: #888;">Tên công ty:</label>
                        <div class="col-md-9">
                            <p class="form-control-static" style="font-weight: bold; font-size: 18px; color: #337ab7;">
                                @Model.CompanyName
                            </p>
                        </div>
                    </div>
                    <hr style="margin: 5px 0 15px 0;" />

                    <!-- Người liên hệ -->
                    <div class="form-group" style="margin-bottom: 5px;">
                        <label class="control-label col-md-3" style="text-align: left; color: #888;">Người liên hệ:</label>
                        <div class="col-md-9">
                            <p class="form-control-static">
                                <i class="fa fa-user"></i> @(string.IsNullOrEmpty(Model.ContactName) ? "Chưa cập nhật" : Model.ContactName)
                            </p>
                        </div>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="form-group" style="margin-bottom: 5px;">
                        <label class="control-label col-md-3" style="text-align: left; color: #888;">Điện thoại:</label>
                        <div class="col-md-9">
                            <p class="form-control-static">
                                <i class="fa fa-phone"></i> @Model.Phone
                            </p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group" style="margin-bottom: 5px;">
                        <label class="control-label col-md-3" style="text-align: left; color: #888;">Email:</label>
                        <div class="col-md-9">
                            <p class="form-control-static">
                                <i class="fa fa-envelope"></i> @(string.IsNullOrEmpty(Model.Email) ? "Chưa cập nhật" : Model.Email)
                            </p>
                        </div>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="form-group" style="margin-bottom: 5px;">
                        <label class="control-label col-md-3" style="text-align: left; color: #888;">Địa chỉ:</label>
                        <div class="col-md-9">
                            <p class="form-control-static">
                                <i class="fa fa-map-marker"></i> @(string.IsNullOrEmpty(Model.Address) ? "Chưa cập nhật" : Model.Address)
                            </p>
                        </div>
                    </div>

                    <!-- Trạng thái -->
                    <div class="form-group" style="margin-bottom: 5px;">
                        <label class="control-label col-md-3" style="text-align: left; color: #888;">Trạng thái:</label>
                        <div class="col-md-9">
                            <p class="form-control-static">
                                @if (Model.isActive == true)
                                {
                                    <span class="label label-success">Đang hợp tác</span>
                                }
                                else
                                {
                                    <span class="label label-danger">Ngừng hợp tác</span>
                                }
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- CỘT PHẢI: HÌNH ẢNH & TÁC VỤ -->
    <div class="col-md-4 text-center">
        <div class="panel panel-default">
            <div class="panel-body">
                 <!-- Sử dụng ảnh mặc định trong thư mục Images -->
                <img src="@Url.Content("~/Images/UserAvatar/no-image.jpg")"
                     class="img-thumbnail img-responsive center-block"
                     alt="Logo nhà cung cấp"
                     style="width: 200px; height: 200px; object-fit: contain; margin-bottom: 20px;" />

                <div class="btn-group-vertical btn-block">
                    <!-- Nút Sửa -->
                    <a href="@Url.Action("Edit", "Supplier", new { id = Model.SupplierID })" class="btn btn-warning btn-lg btn-block">
                        <i class="fa fa-pencil"></i> Chỉnh sửa thông tin
                    </a>

                    <br />

                    <!-- Nút Quay lại -->
                    <a href="@Url.Action("Index", "Supplier")" class="btn btn-default btn-block">
                        <i class="fa fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>