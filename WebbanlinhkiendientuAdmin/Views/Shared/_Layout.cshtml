<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Quản Trị ShopHNT</title>

   
    <link href="~/Content/MyContent/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/font-awesome.css" rel="stylesheet" />

    <!-- CSS Tùy chỉnh Admin Dashboard -->
    <style>
        body {
            padding-top: 50px;
            background-color: #f8f8f8;
            font-family: Arial, sans-serif;
        }

        /* Sidebar (Menu trái) */
        .sidebar {
            position: fixed;
            top: 50px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: block;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto;
            background-color: #2c3e50; /* Màu xanh đen hiện đại */
            border-right: 1px solid #eee;
        }

        .nav-sidebar {
            margin-right: -21px;
            margin-bottom: 20px;
            margin-left: -20px;
        }

            .nav-sidebar > li > a {
                padding-right: 20px;
                padding-left: 20px;
                color: #bdc3c7; /* Màu chữ xám nhạt */
                border-bottom: 1px solid rgba(255,255,255,0.05);
                transition: 0.3s;
            }

                .nav-sidebar > li > a:hover {
                    color: #fff;
                    background-color: #d9534f; /* Hover đỏ thương hiệu */
                    text-decoration: none;
                }

            .nav-sidebar > .active > a, .nav-sidebar > .active > a:hover, .nav-sidebar > .active > a:focus {
                color: #fff;
                background-color: #d9534f; /* Active đỏ */
                font-weight: bold;
            }

        /* Tiêu đề nhóm menu */
        .nav-header {
            color: #95a5a6;
            padding: 15px 20px 5px 20px;
            text-transform: uppercase;
            font-size: 11px;
            font-weight: bold;
            letter-spacing: 1px;
        }

        /* Main Content (Nội dung phải) */
        .main {
            padding: 20px;
            background-color: #fff;
            min-height: 100vh;
        }
        
        @@media (min-width: 768px) {
            .main {
                padding-right: 40px;
                padding-left: 40px;
            }
        }

        /* Navbar Top */
        .navbar-inverse {
            background-color: #d9534f;
            border-color: #d43f3a;
        }

            .navbar-inverse .navbar-brand {
                color: #fff;
                font-weight: bold;
                text-transform: uppercase;
            }

            .navbar-inverse .navbar-nav > li > a {
                color: #fff;
            }

                .navbar-inverse .navbar-nav > li > a:hover {
                    background-color: #c9302c;
                }

        
        .alert {
            margin-top: 20px;
            border-radius: 3px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
    </style>
</head>

<body>
    <!-- 1. HEADER (Menu trên cùng) -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">
                    <i class="fa fa-microchip"></i> Quản Trị Shop HNT
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <!-- Hiển thị tên Admin -->
                    <li><a href="#"><i class="fa fa-user-circle"></i> Xin chào, <strong>@Session["AdminUser"]</strong></a></li>
                    <li><a href="@Url.Action("Logout", "admin_Login")"><i class="fa fa-sign-out"></i> Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- 2. SIDEBAR (Menu bên trái - Đầy đủ chức năng) -->
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <!-- Dashboard -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-tachometer"></i> Tổng quan</a>
                    </li>

                    <li class="nav-header">Quản lý bán hàng</li>

                    <!-- Đơn hàng -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Order" ? "active" : "")">
                        <a href="@Url.Action("Index", "Order")"><i class="fa fa-file-text-o"></i> Đơn hàng</a>
                    </li>
                    <!-- Sản phẩm -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Product" ? "active" : "")">
                        <a href="@Url.Action("Index", "Product")"><i class="fa fa-cubes"></i> Sản phẩm</a>
                    </li>

                    <li class="nav-header">Danh mục</li>

                    <!-- Danh mục gốc -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Category" ? "active" : "")">
                        <a href="@Url.Action("Index", "Category")"><i class="fa fa-folder"></i> Danh mục gốc</a>
                    </li>
                    <!-- Danh mục con -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "SubCategory" ? "active" : "")">
                        <a href="@Url.Action("Index", "SubCategory")"><i class="fa fa-folder-open"></i> Danh mục con</a>
                    </li>

                    <li class="nav-header">Đối tác & Nhân sự</li>

                    <!-- Khách hàng -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Customer" ? "active" : "")">
                        <a href="@Url.Action("Index", "Customer")"><i class="fa fa-users"></i> Khách hàng</a>
                    </li>
                    <!-- Nhà cung cấp -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Supplier" ? "active" : "")">
                        <a href="@Url.Action("Index", "Supplier")"><i class="fa fa-truck"></i> Nhà cung cấp</a>
                    </li>
                    <!-- Nhân viên -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Employee" ? "active" : "")">
                        <a href="@Url.Action("Index", "Employee")"><i class="fa fa-id-card"></i> Nhân viên</a>
                    </li>

                    <!-- [MỚI] Báo cáo thống kê -->
                    <li class="nav-header">Thống kê</li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Report" ? "active" : "")">
                        <a href="@Url.Action("Index", "Report")"><i class="fa fa-bar-chart"></i> Báo cáo doanh thu</a>
                    </li>
                </ul>
            </div>

            <!-- 3. MAIN CONTENT (Nội dung chính) -->
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                <!--  HIỂN THỊ THÔNG BÁO GLOBAL -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <i class="fa fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    </div>
                }

                <!-- Vị trí render nội dung từng trang -->
                @RenderBody()

                <hr />
                <footer class="text-center text-muted" style="font-size: 12px; margin-top: 20px;">
                    <p>&copy; @DateTime.Now.Year - <strong style="color: #d31e1e;"> <i class="fa fa-user"></i> SV:Huỳnh Ngọc Thuận  -  Lớp: <strong>DK24TTC2  -  </strong>Đề tài: Web Bán Linh Kiện Điện Tử</strong>></p>
                </footer>
            </div>
        </div>
    </div>

    
    <script src="~/Content/MyContent/js/jquery.min.js"></script>
    <script src="~/Content/MyContent/js/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>