<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShopHNT Linh Kiện Điện Tử</title>

    <!-- 1. CSS FILES -->
    <link href="~/Content/MyContent/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/jquery.simpleLens.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/jquery.smartmenus.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/nouislider.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/sequence-theme.modern-slide-in.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/slick.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/style.css" rel="stylesheet" />
    <link href="~/Content/MyContent/Intellisence/css/jquery-ui.min.css" rel="stylesheet" />

    <!-- 2. JS FILES -->
    <script src="~/Content/MyContent/js/jquery.min.js"></script>
    <script src="~/Content/MyContent/Intellisence/js/jquery-ui.min.js"></script>

    <!-- Script Autocomplete -->
    <script type="text/javascript">
        $(function () {
            if ($.fn.autocomplete) {
                $("#searchTxtBox").autocomplete({
                    source: '@Url.Action("GetProducts", "PShop")',
                    minLength: 1,
                    select: function(event, ui) {
                        $("#searchTxtBox").val(ui.item.value);
                        $(this).closest("form").submit();
                    }
                });
            }
        });
    </script>

    <!-- 3. CSS TÙY CHỈNH (THEME SHOP HNT) -->
    <style>
        /* --- HEADER & MENU --- */
        .aa-header-top-right .aa-head-top-nav-right li a {
            color: #333;
            border-right: 1px solid #ddd;
            padding: 0 10px;
            font-size: 13px;
        }

            .aa-header-top-right .aa-head-top-nav-right li a:hover {
                color: #d31e1e;
                text-decoration: none;
            }

        #menu {
            background-color: #222 !important;
            border-bottom: 3px solid #d31e1e;
        }

            #menu .navbar-nav > li > a {
                color: #fff !important;
                font-weight: bold;
                font-size: 14px;
                text-transform: uppercase;
            }

                #menu .navbar-nav > li > a:hover, #menu .navbar-nav > .active > a {
                    background-color: #d31e1e !important;
                    color: #fff !important;
                }

            #menu .dropdown-menu {
                border-top: 3px solid #d31e1e;
                min-width: 220px;
                padding: 0;
            }

                #menu .dropdown-menu li a {
                    padding: 10px 15px;
                    border-bottom: 1px solid #eee;
                    color: #333 !important;
                }

                    #menu .dropdown-menu li a:hover {
                        background-color: #f4f4f4;
                        color: #d31e1e !important;
                        padding-left: 20px;
                        transition: 0.3s;
                    }

        /* --- FOOTER --- */
        #aa-footer .aa-footer-top {
            background-color: #222 !important;
            padding: 50px 0;
            color: #ccc;
        }

        #aa-footer h3 {
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
            border-bottom: 2px solid #d31e1e;
            padding-bottom: 10px;
            display: inline-block;
        }

        #aa-footer ul.aa-footer-nav li a {
            color: #999;
            font-size: 14px;
            transition: 0.3s;
        }

            #aa-footer ul.aa-footer-nav li a:hover {
                color: #fff;
                padding-left: 5px;
            }

        
        /* Thông tin sinh viên 
        .student-info {
            margin-top: 15px;
            padding-left: 0; /* Căn sát lề trái */
        }

            .student-info p {
                margin-bottom: 8px;
                font-size: 14px;
                color: #fff !important;
            }

            .student-info i {
                width: 20px;
                color: #d31e1e !important;
                text-align: center;
            }

            .student-info strong {
                color: #d31e1e !important;
                font-weight: bold;
                font-size: 15px;
            }

            .student-info p {
                margin-bottom: 8px;
                font-size: 14px;
                color: #fff !important;
            }

            .student-info i {
                width: 20px;
                color: #d31e1e !important;
                text-align: center;
            }
            
            .student-info strong {
                color: #d31e1e !important;
                font-weight: bold;
                font-size: 15px;
            }

        /* --- GLOBAL ALERT --- */
        #global-alert {
            position: fixed;
            bottom: 20px;
            right: 20px;
            top: auto;
            z-index: 999999;
            display: none;
            min-width: 300px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            border-left: 5px solid #3c763d;
            background-color: #dff0d8;
            color: #3c763d;
            padding: 15px;
            border-radius: 4px;
        }

        /* --- NÚT TÌM KIẾM (MÀU ĐEN) --- */
        .aa-search-box button {
            background-color: #000000 !important;
            color: #ffffff !important;
            border: none !important;
        }

            .aa-search-box button:hover {
                background-color: #d31e1e !important;
                box-shadow: 0 0 5px rgba(0,0,0,0.5);
            }

        

        ul.aa-product-catg {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -10px;
            padding: 0;
            width: 100%;
        }

        .product-wrapper {
            padding: 0 10px;
            margin-bottom: 20px;
            list-style: none;
        }

        @@media (min-width: 992px) {
            .product-wrapper {
                width: 25%;
            }
        }

        @@media (min-width: 768px) and (max-width: 991px) {
            .product-wrapper {
                width: 33.33%;
            }
        }

        @@media (max-width: 767px) {
            .product-wrapper {
                width: 50%;
            }
        }

        /* 1. KHUNG CARD CHÍNH */
        .product-card {
            background: #fff;
            border: 1px solid #e0e0e0;
            position: relative;
            height: 490px; /* Chiều cao cố định */
            transition: all 0.3s;
            border-radius: 4px;
            overflow: visible;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
        }

            .product-card:hover {
                border-color: #aaa;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                z-index: 10;
                transform: translateY(-3px);
            }

        /* 2. ẢNH SẢN PHẨM */
        .product-img-wrap {
            height: 210px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid #f1f1f1;
            background: #fff;
        }

            .product-img-wrap img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
                transition: 0.3s;
            }

        .product-card:hover .product-img-wrap img {
            transform: scale(1.05);
        }

        /* 3. THANH TÁC VỤ (Z-INDEX CAO ĐỂ BẤM ĐƯỢC) */
        .product-action-bar {
            display: flex;
            border-bottom: 1px solid #f1f1f1;
            height: 40px;
            background: #fdfdfd;
            position: relative;
            z-index: 30;
        }

            .product-action-bar a {
                flex: 1;
                display: flex;
                align-items: center;
                justify-content: center;
                color: #555;
                font-size: 16px;
                border-right: 1px solid #f1f1f1;
                text-decoration: none;
                cursor: pointer;
            }

                .product-action-bar a:last-child {
                    border-right: none;
                }

                .product-action-bar a:hover {
                    background-color: #d31e1e;
                    color: #fff;
                }

        /* 4. THÔNG TIN */
        .product-info {
            padding: 10px;
            text-align: center;
            position: relative;
            flex-grow: 1;
            height: 180px;
        }

        .product-name {
            font-size: 14px;
            margin: 0 0 5px;
            height: 38px;
            overflow: hidden;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

            .product-name a {
                color: #333;
                text-decoration: none;
                font-weight: 600;
            }

                .product-name a:hover {
                    color: #288ad6;
                }

        .product-desc {
            font-size: 12px;
            color: #888;
            margin-bottom: 5px;
            height: 20px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        /* 5. KHU VỰC GIÁ */
        .pro-price-box {
            margin-top: 5px;
            height: 60px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .label-cheaper {
            color: #d31e1e;
            font-size: 11px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 2px;
        }

        .pro-price-current {
            color: #d31e1e !important;
            font-size: 20px;
            font-weight: bold;
            line-height: 1.2;
            display: block !important;
        }

        .price-old-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            margin-top: 2px;
        }

        .pro-price-old {
            color: #999;
            text-decoration: line-through;
            font-size: 13px;
        }

        .discount-badge {
            background-color: #288ad6;
            color: #fff;
            font-size: 11px;
            padding: 1px 4px;
            border-radius: 2px;
        }

        .pro-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #d31e1e;
            color: #fff;
            font-weight: bold;
            font-size: 12px;
            padding: 3px 8px;
            border-radius: 3px;
            z-index: 10;
        }

        .product-compare {
            margin-top: 5px;
        }

            .product-compare a {
                color: #288ad6;
                font-size: 12px;
            }

        /* 6. TOOLTIP HỘP ĐEN (HEIGHT 200PX ĐỂ KHÔNG CHE NÚT) */
        .product-hover-specs {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 200px; /* Cao vừa bằng ảnh */
            background-color: rgba(20, 20, 20, 0.95);
            color: #fff;
            padding: 15px;
            z-index: 20;
            border-bottom: 2px solid #d31e1e;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
            text-align: left;
        }

        .product-card:hover .product-hover-specs {
            display: flex;
            animation: fadeIn 0.2s ease-in;
        }

        .product-hover-specs h4 {
            color: #ffcc00;
            font-size: 12px;
            font-weight: bold;
            text-transform: uppercase;
            border-bottom: 1px solid #555;
            padding-bottom: 5px;
            margin: 0 0 8px 0;
            width: 100%;
            text-align: left;
        }

        .product-hover-specs ul {
            padding-left: 15px;
            margin: 0;
            width: 100%;
        }

        .product-hover-specs li {
            font-size: 11px;
            margin-bottom: 4px;
            line-height: 1.3;
            color: #eee;
            list-style-type: disc;
            list-style-position: outside;
            text-align: left;
            width: 100%;
        }

        .specs-btn-action {
            display: none;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>

    <!-- Global Alert -->
    <div id="global-alert" class="alert alert-success alert-dismissible">
        <button type="button" class="close" onclick="$('#global-alert').fadeOut()">&times;</button>
        <i class="fa fa-check-circle fa-lg"></i> <span id="global-alert-msg" style="font-weight:bold; margin-left:5px;"></span>
    </div>

    <!-- HEADER -->
    <header id="aa-header">
        <div class="aa-header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            <div class="aa-header-top-left">
                                <p><span class="fa fa-phone"></span> Hotline: <strong style="color:#d31e1e">0909.605.779</strong></p>
                            </div>
                            <div class="aa-header-top-right">
                                <ul class="aa-head-top-nav-right">
                                    @if (Session["UserID"] != null)
                                    {
                                        <li><a href="@Url.Action("Profile", "Account")"><i class="fa fa-user"></i> Chào, <strong>@(Session["username"] ?? "Khách")</strong></a></li>
                                        <li><a href="@Url.Action("Index", "WishList")">Yêu thích <span class="badge" style="background-color:#d31e1e">@(ViewBag.WlItemsNo ?? 0)</span></a></li>
                                        <li><a href="@Url.Action("Index", "MyCart")">Giỏ hàng <span class="badge" style="background-color:#d31e1e">@(ViewBag.NoOfItem ?? 0)</span></a></li>
                                        <li><a href="@Url.Action("Index", "CheckOut")">Thanh toán</a></li>
                                        <li><a href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Login", "Account", new { returnUrl = Request.Url.PathAndQuery })"><i class="fa fa-sign-in"></i> Đăng nhập</a></li>
