                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <div class="aa-logo">
                                <a href="@Url.Action("Index", "Home")">
                                    <span class="fa fa-microchip" style="color: #d31e1e;"></span>
                                    <p>Shop<strong>HNT</strong> <span style="color: #888; font-size:14px;">Linh Kiện Điện Tử</span></p>
                                </a>
                            </div>
                            <div class="aa-cartbox">
                                @Html.Action("GetCartBox", "PShop")
                            </div>
                            <div class="aa-search-box">
                                <form action="@Url.Action("Search", "PShop")" method="get">
                                    <input type="text" name="product" id="searchTxtBox" placeholder="Bạn cần tìm linh kiện gì? (CPU, RAM...)">
                                    <button type="submit"><span class="fa fa-search"></span></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- MENU -->
    <section id="menu">
        <div class="container">
            <div class="menu-area">
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                            @{
                                using (var db = new WebbanlinhkiendientuAdmin.Models.WebbanlinhkiendientuAdminDbModels())
                                {
                                    var categories = db.Categories.Where(c => c.isActive == true).ToList();
                                    foreach (var cat in categories)
                                    {
                                        var subCats = db.SubCategories.Where(s => s.CategoryID == cat.CategoryID && s.isActive == true).ToList();
                                        if (subCats.Any())
                                        {
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@cat.Name <span class="caret"></span></a>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li><a href="@Url.Action("GetProductsByCategory", "PShop", new { categoryName = cat.Name })"><strong>Tất cả @cat.Name</strong></a></li>
                                                    <li class="divider"></li>
                                                    @foreach (var sub in subCats)
                                                    {
                                                        <li><a href="@Url.Action("GetProductsByCategory", "PShop", new { categoryName = sub.Name })">@sub.Name</a></li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a href="@Url.Action("GetProductsByCategory", "PShop", new { categoryName = cat.Name })">@cat.Name</a></li>
                                        }
                                    }
                                }
                            }
                            <li><a href="@Url.Action("Index", "Contact")">Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- BODY -->
    @RenderBody()

