    <script src="~/Content/MyContent/js/sequence.js"></script>
    <script src="~/Content/MyContent/js/sequence-theme.modern-slide-in.js"></script>
    <script src="~/Content/MyContent/js/jquery.simpleGallery.js"></script>
    <script src="~/Content/MyContent/js/jquery.simpleLens.js"></script>
    <script src="~/Content/MyContent/js/slick.js"></script>
    <script src="~/Content/MyContent/js/nouislider.js"></script>
    <script src="~/Content/MyContent/js/custom.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

    <!-- Script hiển thị thông báo -->
    <script>
        $(document).ready(function () {
            var successMsg = '@Html.Raw(TempData["Success"])';
            var errorMsg = '@Html.Raw(TempData["Error"])';

            if (successMsg && successMsg.length > 0) {
                $("#global-alert-msg").html(successMsg);
                $("#global-alert").removeClass("alert-danger").addClass("alert-success").fadeIn();
                setTimeout(function () { $("#global-alert").fadeOut(); }, 4000);
            }
            if (errorMsg && errorMsg.length > 0) {
                $("#global-alert-msg").html(errorMsg);
                $("#global-alert").removeClass("alert-success").addClass("alert-danger").fadeIn();
                setTimeout(function () { $("#global-alert").fadeOut(); }, 5000);
            }
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
