@model WebbanlinhkiendientuAdmin.Models.Customer

@{
    ViewBag.Title = "Xác nhận xóa khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- TIÊU ĐỀ TRANG -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header" style="color: #d9534f; border-bottom: 2px solid #ddd; margin-top: 20px;">
            <i class="fa fa-exclamation-triangle"></i> Xóa Khách Hàng
        </h3>
    </div>
</div>

<!-- HIỂN THỊ THÔNG BÁO LỖI (NẾU CÓ TỪ CONTROLLER TRẢ VỀ) -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong><i class="fa fa-times-circle"></i> Lỗi:</strong> @TempData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <!-- SỬ DỤNG PANEL DANGER (MÀU ĐỎ) ĐỂ CẢNH BÁO -->
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-trash-o"></i> Bạn có chắc chắn muốn xóa khách hàng này không?</h3>
            </div>

            <div class="panel-body">
                <!-- Cảnh báo text -->
                <div class="alert alert-warning">
                    <i class="fa fa-warning"></i> <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác. Nếu khách hàng này đã có đơn hàng, bạn sẽ không thể xóa (hãy chọn khóa tài khoản thay thế).
                </div>

                <div class="row">
                    <!-- CỘT TRÁI: ẢNH VÀ TÊN -->
                    <div class="col-md-3 text-center">
                        <img src="@Url.Content(string.IsNullOrEmpty(Model.PicturePath) ? "~/Images/UserAvatar/no-image.jpg" : Model.PicturePath)"
                             alt="Avatar"
                             class="img-thumbnail img-circle"
                             style="width: 150px; height: 150px; object-fit: cover; margin-bottom: 15px;" />

                        <h4 class="text-danger" style="font-weight: bold;">@Model.First_Name @Model.Last_Name</h4>
                        <p class="text-muted">@Model.UserName</p>
                    </div>

                    <!-- CỘT PHẢI: THÔNG TIN CHI TIẾT -->
                    <div class="col-md-9">
                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th style="width: 150px;">Email:</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Số điện thoại:</th>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <th>Ngày sinh:</th>
                                    <td>@(Model.DateofBirth.HasValue ? Model.DateofBirth.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")</td>
                                </tr>
                                <tr>
                                    <th>Giới tính:</th>
                                    <td>
                                        @if (Model.Gender == "Male")
                                        {<span>Nam</span> }
                                        else if (Model.Gender == "Female")
                                        { <span>Nữ</span> }
                                        else
                                        { <span>@Model.Gender</span>}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Địa chỉ:</th>
                                    <td>@Model.Address</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái:</th>
                                    <td>
                                        @if (Model.status == true)
                                        {<span class="label label-success">Đang hoạt động</span> }
                                        else
                                        { <span class="label label-default">Đã khóa</span>}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- CHÂN PANEL: CHỨA NÚT XÁC NHẬN -->
            <div class="panel-footer text-right">
                @using (Html.BeginForm("Delete", "Customer", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.CustomerID)

                    <!-- Nút Hủy -->
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-default">
                        <i class="fa fa-arrow-left"></i> Hủy bỏ, quay lại
                    </a>

                    <!-- Nút Xóa (Màu đỏ) -->
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xóa vĩnh viễn
                    </button>
                }
            </div>
        </div>
    </div>
</div>