@model WebbanlinhkiendientuAdmin.Models.admin_Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập Quản Trị - ShopHNT</title>

    
    <link href="~/Content/MyContent/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/MyContent/css/font-awesome.css" rel="stylesheet" />

    <style>
        
        body {
            background-color: #f8f8f8;
            font-family: Arial, sans-serif;
        }

        .login-wrapper {
            margin-top: 80px; /* Cách lề trên để khung trôi xuống giữa */
        }

        .panel-login {
            border-color: #ccc;
            box-shadow: 0px 2px 10px rgba(0,0,0,0.1);
        }

            .panel-login .panel-heading {
                color: #fff;
                background-color: #d9534f; 
                border-color: #d9534f;
                text-align: center;
                font-size: 18px;
                font-weight: bold;
                padding: 15px;
            }

        .input-group-addon {
            background-color: #fff;
            color: #555;
        }

        .btn-login {
            background-color: #d9534f;
            border-color: #d43f3a;
            color: #fff;
            font-weight: bold;
            padding: 10px;
            transition: 0.3s;
        }

            .btn-login:hover {
                background-color: #c9302c;
                color: #fff;
            }

        .footer-copyright {
            margin-top: 20px;
            text-align: center;
            color: #888;
            font-size: 12px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row login-wrapper">
            <!-- Căn giữa màn hình bằng Grid System Bootstrap 3 -->
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

                <!-- Sử dụng PANEL (Đặc trưng của Bootstrap 3) -->
                <div class="panel panel-default panel-login">
                    <div class="panel-heading">
                        <i class="fa fa-lock"></i> ĐĂNG NHẬP HỆ THỐNG
                    </div>

                    <div class="panel-body" style="padding: 30px;">

                        @using (Html.BeginForm("Login", "admin_Login", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            // 1. THÔNG BÁO LỖI
                            if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger text-center">
                                    <i class="fa fa-exclamation-triangle"></i> @ViewBag.Error
                                </div>
                            }

                            // 2. TÊN ĐĂNG NHẬP
                            <div class="form-group">
                                <label>Tài khoản:</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Nhập tên đăng nhập...", @autofocus = "autofocus" })
                                </div>
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>

                            // 3. MẬT KHẨU
                            <div class="form-group">
                                <label>Mật khẩu:</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu..." })
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>

                            // 4. CHECKBOX GHI NHỚ
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="remember" value="true"> Ghi nhớ đăng nhập
                                </label>
                            </div>

                            // 5. NÚT ĐĂNG NHẬP (Full width)
                            <div class="form-group" style="margin-top: 20px;">
                                <button type="submit" class="btn btn-login btn-block">
                                    Đăng Nhập <i class="fa fa-sign-in"></i>
                                </button>
                            </div>
                        }
                    </div>
                </div>

                <div class="footer-copyright">
                    &copy; @DateTime.Now.Year ShopHNT Admin System.
                </div>

            </div>
        </div>
    </div>

    
    <script src="~/Content/MyContent/js/jquery.min.js"></script>
    <script src="~/Content/MyContent/js/bootstrap.js"></script>
</body>
</html>