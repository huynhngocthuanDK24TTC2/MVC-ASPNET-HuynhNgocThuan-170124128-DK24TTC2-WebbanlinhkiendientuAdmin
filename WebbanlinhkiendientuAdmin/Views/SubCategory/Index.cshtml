<!-- SỬA LỖI QUAN TRỌNG: Model phải là IEnumerable<SubCategory>, KHÔNG PHẢI Supplier -->
@model IEnumerable<WebbanlinhkiendientuAdmin.Models.SubCategory>

@{
    ViewBag.Title = "Quản lý danh mục con";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- TIÊU ĐỀ TRANG -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header" style="color: #5bc0de; border-bottom: 2px solid #ddd; margin-top: 20px;">
            <i class="fa fa-folder-open"></i> Quản Lý Danh Mục Con
        </h3>
    </div>
</div>

<!-- KHU VỰC THÔNG BÁO (ALERT) -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <i class="fa fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <!-- KHUNG PANEL -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="panel-title" style="line-height: 34px;">
                            <i class="fa fa-list"></i> Danh sách phân loại sản phẩm
                        </h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <!-- Nút Thêm Mới -->
                        <a href="@Url.Action("Create", "SubCategory")" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Thêm danh mục con
                        </a>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr class="info">
                                <th style="width: 50px;" class="text-center">ID</th>
                                <th>Tên danh mục con</th>
                                <th>Thuộc danh mục cha</th>
                                <th class="text-center">Trạng thái</th>
                                <th class="text-center" style="width: 150px;">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.SubCategoryID</td>

                                        <td style="font-weight: bold; color: #333;">
                                            @item.Name
                                        </td>

                                        <td>
                                            @if (item.Category != null)
                                            {
                                                <span class="label label-info" style="font-size: 100%;">
                                                    <i class="fa fa-folder"></i> @item.Category.Name
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Không có cha</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            @if (item.isActive == true)
                                            {
                                                <span class="label label-success">Hiển thị</span>
                                            }
                                            else
                                            {
                                                <span class="label label-default">Đã ẩn</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            <!-- Nút Sửa -->
                                            <a href="@Url.Action("Edit", "SubCategory", new { id = item.SubCategoryID })" class="btn btn-warning btn-xs" title="Sửa">
                                                <i class="fa fa-pencil"></i>
                                            </a>

                                            <!-- Nút Xóa (Kèm xác nhận JS) -->
                                            <a href="@Url.Action("Delete", "SubCategory", new { id = item.SubCategoryID })"
                                               class="btn btn-danger btn-xs"
                                               title="Xóa"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục con [@item.Name] không?');">
                                                <i class="fa fa-trash-o"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted" style="padding: 20px;">
                                        Chưa có dữ liệu danh mục con nào.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>