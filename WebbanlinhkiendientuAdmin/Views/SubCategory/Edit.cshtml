@model WebbanlinhkiendientuAdmin.Models.SubCategory

@{
    ViewBag.Title = "Cập nhật danh mục con";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- 1. TIÊU ĐỀ TRANG (Màu vàng cam - Warning) -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header" style="color: #f0ad4e; border-bottom: 2px solid #ddd; margin-top: 20px;">
            <i class="fa fa-pencil-square-o"></i> Cập Nhật Danh Mục Con
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- 2. KHUNG PANEL (Panel Warning) -->
        <div class="panel panel-warning" style="box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
            <div class="panel-heading">
                <h3 class="panel-title">Thông tin chi tiết</h3>
            </div>
            <div class="panel-body" style="padding: 30px;">

                @using (Html.BeginForm("Edit", "SubCategory", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <!-- Giữ lại ID để Controller biết đang sửa dòng nào -->
                    @Html.HiddenFor(x => x.SubCategoryID)

                    <!-- Hiển thị lỗi nếu có -->
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row">
                        <!-- CỘT 1 -->
                        <div class="col-md-6">
                            <!-- Tên danh mục -->
                            <div class="form-group">
                                <label class="control-label">Tên danh mục con <span class="text-danger">*</span></label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên danh mục..." })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>

                            <!-- Chọn danh mục cha (Dropdown) -->
                            <div class="form-group">
                                <label class="control-label">Thuộc danh mục cha <span class="text-danger">*</span></label>
                                <!-- ViewBag.CategoryList: Chữ C hoa khớp với Controller -->
                                @Html.DropDownListFor(m => m.CategoryID, ViewBag.CategoryList as SelectList, "— Chọn danh mục cha —", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CategoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- CỘT 2 -->
                        <div class="col-md-6">
                            <!-- Mô tả -->
                            <div class="form-group">
                                <label class="control-label">Mô tả / Ghi chú</label>
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>

                            <!-- Trạng thái (CHECKBOX CHUẨN CHO NULLABLE BOOL) -->
                            <div class="form-group">
                                <label class="control-label">Trạng thái</label>
                                <div class="checkbox">
                                    <label>
                                        <!-- Input checkbox thủ công -->
                                        <!-- Logic: Nếu Model.isActive có giá trị và bằng true -> checked -->
                                        <input type="checkbox" name="isActive" value="true" @(Model.isActive.GetValueOrDefault() ? "checked" : "") />

                                        <!-- Input hidden để gửi giá trị false nếu bỏ tích -->
                                        <input type="hidden" name="isActive" value="false" />

                                        <strong>Kích hoạt hiển thị</strong>
                                    </label>
                                </div>
                                @Html.ValidationMessageFor(m => m.isActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <hr />

                    <!-- HÀNG NÚT BẤM -->
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fa fa-save"></i> Lưu Thay Đổi
                            </button>
                            &nbsp;
                            <a href="@Url.Action("Index", "SubCategory")" class="btn btn-default btn-lg">
                                <i class="fa fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}